/*\
title: $:/plugins/chgl29/learncards/learnCart.js
type: application/javascript
module-type: widget

learnControll widget

\*/

(function(){
var Widget = require("$:/core/modules/widgets/widget.js").widget;

var learnCartWidget = function(parseTreeNode,options) {
	this.initialise(parseTreeNode,options);
	this.addEventListeners([
		{type: "tw-remove-tag", handler: exports.fieldmangler.handleRemoveTagEvent},
		{type: "tw-add-tag", handler: exports.fieldmangler.handleRemoveTagEvent}
	]);
};

/*
Inherit from the base widget class
*/
learnCartWidget.prototype = new Widget();

learnCartWidget.prototype.render = function(parent,nextSibling){
var self = this;
this.parentDomNode = parent;
this.computeAttributes();
	this.execute();
var domNode = this.document.createElement("button");
domNode.addEventListener("click",function (event) {
		self.addTag();
	},false);
parent.insertBefore(domNode,nextSibling);
	this.renderChildren(domNode,null);
	this.domNodes.push(domNode);
};
learnCartWidget.prototype.execute = function(){

};
learnCartWidget.prototype.refresh = function(){

};
learnCartWidget.prototype.removeChildDomNodes = function(){

};
learnCartWidget.prototype.create = function(parent,nextSibling){

};
learnCartWidget.prototype.addTag = function(){
	this.dispatchEvent({type: "tw-add-tag", param: "fail", tiddlerTitle: this.getVariable("currentTiddler")});
};
exports.learnCart = learnCartWidget;
})();
